<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.StudentMapperCustom">
    <select id="getStudentByAge" parameterType="Integer" resultType="com.sky.bean.Student">
        SELECT userId,
               `name`,
               age
        FROM student
        WHERE age = #{age}
    </select>

    <select id="getStudentByCustom" parameterType="string" resultType="com.sky.bean.Student">
        SELECT userId,
               `name`,
               age,
               score
        FROM student
        WHERE score = #{score}
    </select>
</mapper>